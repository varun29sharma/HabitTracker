<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.habittracker.controllers.LoginController"
            styleClass="root, theme-habits">

    <center>
        <VBox styleClass="card" maxWidth="350" maxHeight="450" spacing="20" alignment="CENTER">
            <padding>
                <Insets top="40" right="40" bottom="40" left="40"/>
            </padding>
            <Label fx:id="headerLabel" text="Welcome Back" styleClass="title" style="-fx-font-size: 24px;"/>
            
            <VBox spacing="10" alignment="CENTER_LEFT" maxWidth="Infinity">
                <Label text="Username" styleClass="field-label"/>
                <TextField fx:id="usernameField" promptText="Enter your username" />
            </VBox>
            
            <VBox spacing="10" alignment="CENTER_LEFT" maxWidth="Infinity">
                <Label text="Password" styleClass="field-label"/>
                <PasswordField fx:id="passwordField" promptText="Enter your password" />
            </VBox>

            <Label fx:id="errorLabel" textFill="#EF4444" wrapText="true" textAlignment="CENTER"/>
            
            <Button fx:id="actionButton" text="Sign In" onAction="#handleAction" maxWidth="Infinity" styleClass="button" style="-fx-font-size: 14px;"/>
            
            <Hyperlink fx:id="toggleLink" text="Don't have an account? Sign Up" onAction="#toggleMode" style="-fx-text-fill: -accent-color;"/>
        </VBox>
    </center>

</BorderPane>
